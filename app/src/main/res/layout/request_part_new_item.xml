<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fortitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="PLESE MENTION THE PARTS REQUIRED"
        android:textColor="@color/md_material_blue_600" />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fortitle"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardElevation="@dimen/cardview_default_elevation">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">


                <TextView
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/accessoryType"


                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Customer name"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/customername"
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_customer"
                    android:gravity="center"

                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <TextView
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/accessoryType"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Mobile no"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mobile"
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_call"
                    android:gravity="center"
                    android:hint="Mobile no"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <TextView
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/accessoryType"


                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Required part"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/partsrequired"
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_name"
                    android:gravity="center"
                    android:hint="Part name"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <TextView
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/accessoryType"


                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Status"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_status"
                    android:gravity="center"
                    android:hint="status"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="18sp" />


                <TextView
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/accessoryType"


                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Price"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/priceEdit"
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otheredit"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_rupees"
                    android:gravity="center"
                    android:hint="Price"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/date_title"
                    fontPath="fonts/rr.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/accessoryType"


                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Expected Delivery date"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/datetext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_smallcalendar"
                    android:gravity="center"
                    android:hint="Date"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/submit"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:shadowRadius="0"
                    android:text="submit" />


            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>