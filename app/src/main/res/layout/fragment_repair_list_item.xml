<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardElevation="@dimen/cardview_default_elevation">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"


                    android:paddingTop="8dp"
                    android:text="Brand"
                    android:textColor="@color/myPrimaryColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/brandtext"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/blank"
                    android:gravity="center"
                    android:hint="Brand"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"


                    android:paddingTop="8dp"
                    android:text="Model"
                    android:textColor="@color/myPrimaryColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/modeltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/blank"
                    android:gravity="center"
                    android:hint="model"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/otheredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_name"
                    android:gravity="center"
                    android:hint="Model no"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"


                    android:paddingTop="8dp"
                    android:text="Status"
                    android:textColor="@color/myPrimaryColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/status"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_status"
                    android:gravity="center"
                    android:hint="status"
                    android:padding="10dp"
                    android:textSize="20sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"


                    android:paddingTop="8dp"
                    android:text="Job no"
                    android:textColor="@color/myPrimaryColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/jobnoedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_name"
                    android:gravity="center"
                    android:hint="Job no"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="20sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Problem"
                    android:textColor="@color/myPrimaryColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/problemedit"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"


                    android:background="@drawable/border_text"
                    android:hint="Problems"
                    android:minLines="2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Resolution"
                    android:textColor="@color/myPrimaryColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/resolutionEdit"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:hint="Resolution"
                    android:minLines="2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"


                    android:paddingTop="8dp"
                    android:text="Price"
                    android:textColor="@color/myPrimaryColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/priceEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/rupees"
                    android:gravity="center"
                    android:hint="Price"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="20sp" />
                <!--</LinearLayout>-->

                <Button
                    android:id="@+id/submit"
                    style="?android:buttonBarButtonStyle"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:shadowRadius="0"
                    android:text="submit" />


            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>