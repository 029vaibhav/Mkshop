<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                fontPath="fonts/rr.ttf"
                android:id="@+id/brandtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:gravity="center"
                android:hint="Brand"
                android:padding="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/modeltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:gravity="center"
                android:hint="model"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/otheredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:drawableRight="@drawable/ic_action_name"
                android:gravity="center"
                android:hint="Model no"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="20dp"
                android:visibility="gone" />


            <TextView
                fontPath="fonts/rr.ttf"
                android:id="@+id/status"
                android:drawableRight="@drawable/ic_action_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:gravity="center"
                android:hint="status"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/jobnoedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:drawableRight="@drawable/ic_action_name"
                android:gravity="center"
                android:hint="Job no"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="20dp" />

            <EditText
                fontPath="fonts/rr.ttf"
                android:id="@+id/problemedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:hint="Problems"
                android:minLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otheredit"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/datetext"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border_text"
                    android:drawableLeft="@drawable/ic_action_smallcalendar"
                    android:gravity="center"
                    android:hint="Date"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/priceEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otheredit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_text"
                    android:drawableLeft="@drawable/rupees"
                    android:gravity="center"
                    android:hint="Price"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                fontPath="fonts/rr.ttf"
                android:id="@+id/submit"
                style="?android:buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:shadowRadius="0"
                android:text="submit" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>