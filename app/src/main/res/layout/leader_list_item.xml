<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/border_list"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:ellipsize="marquee"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/revenue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/Brand"
            android:layout_weight="3"
            android:gravity="right|center_vertical|end"
            android:padding="5dp"
            android:textColor="@color/flatGreen"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="10">

        <TextView
            android:id="@+id/nameMobile"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantityMobile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/revenueMobile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/Brand"
            android:layout_weight="3"
            android:gravity="right|center_vertical|end"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/myAccentColor"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="10">

        <TextView
            android:id="@+id/nameAccessory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:ellipsize="marquee"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantityAccessory"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/revenueAccessory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/Brand"
            android:layout_weight="3"
            android:gravity="right|center_vertical|end"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/myAccentColor"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>
