<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobiles.msm.fragments.RequestRepair">


    <ScrollView
        android:background="#fff"
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_mkshop" />


            <TextView
                android:id="@+id/brand_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:dividerPadding="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/dealer_name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/dealer_edit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand_title"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:drawablePadding="10dp"
                android:ems="10"
                android:gravity="center"
                android:padding="10dp"
                android:maxLines="1"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/modeltitle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dealer_edit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:dividerPadding="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/total"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/total_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/modeltitle"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otheredit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_edit"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:drawableRight="@drawable/ic_action_name"
                android:gravity="center"
                android:hint="@string/model"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="18sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/note_text_input_layout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otheredit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:dividerPadding="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/quantity"
                android:textSize="14sp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/quantityEdit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_text_input_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_action_transparent"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:maxLines="1"
                android:textSize="18sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/text_input_layout"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_edit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:dividerPadding="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/notes"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/note"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_text"
                android:drawablePadding="10dp"
                android:ems="10"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="18sp"
                android:maxLines="1" />

            <Button
                android:contentDescription="@string/submit"
                android:id="@+id/submit"
                style="?android:buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="@string/submit" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>