<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fortitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="PLEASE FILL THE SERVICE FORM"
        android:textColor="@android:color/holo_blue_bright" />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardElevation="@dimen/cardview_default_elevation">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Brand"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/brandtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_transparent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Model"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/modeltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_transparent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Status"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_status"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Job no"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/jobnoedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_transparent"
                    android:ems="10"
                    android:gravity="center"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Problem"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/problemedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_transparent"
                    android:ems="10"
                    android:gravity="center"
                    android:padding="8dp"
                    android:singleLine="false"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Price"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/priceEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_text"
                    android:drawableRight="@drawable/ic_action_rupees"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/submit"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:shadowRadius="0"
                    android:text="submit" />
            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>